<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragmentContainer"
    android:background="@color/colorWhite"
    >
    <RelativeLayout
        android:id="@+id/test_class_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/test_login_rlv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="144dp"
            >

            <TextView
                android:id="@+id/test_login_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:layout_centerVertical="true"
                />
            <EditText
                android:id="@+id/test_login_et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/test_login_name"
                android:inputType="textPersonName"
                android:drawableStart="@drawable/wei_food_strawberry"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/test_login_rlv_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="6dp"
            android:layout_below="@id/test_login_rlv_name"
            >

            <TextView
                android:id="@+id/test_login_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password:"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:layout_centerVertical="true"
                />
            <EditText
                android:id="@+id/test_login_et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/test_login_password"
                android:inputType="textPassword"
                android:drawableStart="@drawable/wei_food_cake"/>
        </RelativeLayout>

        <Button
            android:id="@+id/test_login_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="@color/colorBlack"
            android:background="@color/colorPrimary"
            android:alpha="0.8"
            android:layout_below="@id/test_login_rlv_password"
            android:layout_marginTop="72dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            />

        <Button
            android:id="@+id/test_login_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textColor="@color/colorBlack"
            android:background="@color/colorPrimary"
            android:alpha="0.8"
            android:layout_below="@id/test_login_bt"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            />
        <CheckBox
            android:id="@+id/test_class_login_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/test_login_register"
            android:check="true"
            android:text=""
            />

        <TextView
            android:id="@+id/test_login_register_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="若无账号请点击注册按钮"
            android:textColor="@color/colorGrey"
            android:textSize="16sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>


</LinearLayout>